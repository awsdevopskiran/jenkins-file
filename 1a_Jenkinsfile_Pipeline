pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'This is Build 1stStage.'
                echo 'This is Build 2nd.'
            }
        }
        stage('Test') {
            steps {
                echo 'This is Test 3rd Stage.'
            }
        }
        stage('Deploy') {
            steps {
                echo 'This is Deploy 4th Stage.'
            }
        }
    }
}
